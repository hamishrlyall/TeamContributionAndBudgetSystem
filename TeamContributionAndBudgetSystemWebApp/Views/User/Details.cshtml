@model TeamContributionAndBudgetSystemWebApp.Models.User

@{
   ViewBag.Title = "Details";
}


@using( Html.BeginForm( ) )
{
   @Html.AntiForgeryToken( )
   <div>
      <h4>@Html.DisplayFor( model => model.Username ) Details</h4>
      <hr />
      @Html.ValidationSummary( true, "", new { @class = "text-danger" } )
      @Html.HiddenFor( model => model.UserId )
      <dl class="dl-horizontal">
         <dt>
            @Html.DisplayNameFor( model => model.UserId )
         </dt>

         <dd>
            @Html.DisplayFor( model => model.UserId )
         </dd>

         <dt>
            @Html.DisplayNameFor( model => model.Username )
         </dt>

         <dd>
            @Html.DisplayFor( model => model.Username )
         </dd>

         <dt>
            @Html.DisplayNameFor( model => model.FirstName )
         </dt>

         <dd>
            @Html.DisplayFor( model => model.FirstName )
         </dd>

         <dt>
            @Html.DisplayNameFor( model => model.LastName )
         </dt>

         <dd>
            @Html.DisplayFor( model => model.LastName )
         </dd>

         <dt>
            @Html.DisplayNameFor( model => model.EmailAddress )
         </dt>

         <dd>
            @Html.DisplayFor( model => model.EmailAddress )
         </dd>

         <dt>
            @Html.DisplayNameFor( model => model.PhoneNumber )
         </dt>

         <dd>
            @Html.DisplayFor( model => model.PhoneNumber )
         </dd>
         <dd>
            <table class="table">
               <tr>
                  <th>Role</th>
               </tr>
               @foreach( var item in Model.UserRoles )
               {
                  <tr>
                     <td>
                        @Html.DisplayFor( modelItem => item.User.Username )
                     </td>
                     <td>
                        @Html.DisplayFor( modelItem => item.Role.Name )
                     </td>
                     <td>
                        @Html.ActionLink( "Delete", "Delete", new { id = item.RoleId } )
                     </td>
                  </tr>
               }
            </table>
         </dd>
         <div class="form-group">
            <label class="control-label col-md-2" for="RoleId">Add New Role</label>
            <div class="col-md-10">
               @Html.DropDownList( "RoleId", String.Empty )
               @Html.ValidationMessageFor( model => model.UserRoles )
            </div>
         </div>

         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
               <input type="submit" name="action" value="Save" class="btn btn-default" />
            </div>
         </div>
      </dl>
   </div>
}
