@model IEnumerable<TeamContributionAndBudgetSystemWebApp.Models.Project>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData[TeamContributionAndBudgetSystemWebApp.Controllers.ProjectController.LabelSuccess] != null)
{
    <p class="text-success">
        @TempData[TeamContributionAndBudgetSystemWebApp.Controllers.ProjectController.LabelSuccess]
    </p>
}
@if (TempData[TeamContributionAndBudgetSystemWebApp.Controllers.ProjectController.LabelError] != null)
{
    <p class="text-danger">
        @TempData[TeamContributionAndBudgetSystemWebApp.Controllers.ProjectController.LabelError]
    </p>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectRoleGroupName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectRoleGroupName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProjectId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId })
            </td>
        </tr>
    }

</table>
