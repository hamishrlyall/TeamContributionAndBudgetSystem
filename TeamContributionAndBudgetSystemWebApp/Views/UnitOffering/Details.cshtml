@model TeamContributionAndBudgetSystemWebApp.Models.UnitOffering

@{
   ViewBag.Title = "Details";
}

<div>
   <h4>Unit Offering Details </h4>
   <hr />
   @Html.ValidationSummary( true, "", new { @class = "text-danger" } )
   <dl class="dl-horizontal">
      <dt>
         @Html.DisplayNameFor( model => model.Convenor )
      </dt>

      <dd>
         @Html.DisplayFor( model => model.Convenor.Username )
      </dd>

      <dt>
         @Html.DisplayNameFor( model => model.Unit )
      </dt>

      <dd>
         @Html.DisplayFor( model => model.Unit.Name )
      </dd>

      <dt>
         @Html.DisplayNameFor( model => model.TeachingPeriod )
      </dt>

      <dd>
         @Html.DisplayFor( model => model.TeachingPeriod.Name )
      </dd>

      <dt>
         @Html.DisplayNameFor( model => model.Year )
      </dt>

      <dd>
         @Html.DisplayFor( model => model.Year.YearValue )
      </dd>

   </dl>

   <dd>
      <table class="table">
         <tr>
            <th>Enrollments</th>
         </tr>

         @foreach( var item in Model.Enrollments )
         {
            using( Html.BeginForm( ) )
            {
               @Html.AntiForgeryToken( )
               <tr>
                  <td>
                     @Html.Hidden( "_EnrollmentId", item.EnrollmentId )
                     @Html.DisplayFor( modelItem => item.Student.Username, item.Student.Username )
                     @Html.ValidationMessageFor( model => model.Enrollments )
                  </td>
                  <td>
                     <input type="submit" name="action" value="Unenrol" class="btn btn-default" />
                  </td>
               </tr>
            }
         }
      </table>
   </dd>
   <dd>
      @using( Html.BeginForm( ) )
      {
         @Html.AntiForgeryToken( )
         <label class="control-label col-md-2" for="UserId">Enrol Student</label>
         <div class="form-group">
            <div class="col-md-10">
               @Html.HiddenFor( model => model.UnitOfferingId, Model.UnitOfferingId )
            </div>
            <div class="col-md-10">
               @Html.DropDownList( "UserId", String.Empty )
               @Html.ValidationMessageFor( model => model.Enrollments )
            </div>
            <div class="col-md-offset-2 col-md-10">
               <input type="submit" name="action" value="Enrol" class="btn btn-default" />
            </div>
         </div>
      }
   </dd>
</div>

<div>
   <h2>Teams</h2>
   <p>
      @Html.ActionLink( "Create New", "Create", "Team", new { id = Model.UnitOfferingId }, new { @class = "ui-btn-right" } )
   </p>
   <table class="table">
      <tr>
         <th>
            @Html.DisplayNameFor( model => model.TeamHeadings.TeamId )
         </th>
         <th>
            @Html.DisplayNameFor( model => model.TeamHeadings.Name )
         </th>
         <th>
            @Html.DisplayNameFor( model => model.TeamHeadings.Supervisor )
         </th>
      </tr>
      <tr>
      </tr>

      @foreach( var item in Model.Teams )
      {
         <tr>
            <td>
               @Html.DisplayFor( modelItem => item.TeamId )
            </td>
            <td>
               @Html.DisplayFor( modelItem => item.Name )
            </td>
            <td>
               @Html.DisplayFor( modelItem => item.Supervisor.Username )
            </td>
            <td>
               @Html.ActionLink( "Edit", "Edit", "Team", new { id = item.TeamId }, new { @class = "ui-btn-right" } ) |
               @Html.ActionLink( "Add Team Members", "Details", "Team", new { id = item.TeamId }, new { @class = "ui-btn-right" } ) |
               @Html.ActionLink( "Delete", "Delete", "Team", new { id = item.TeamId }, new { @class = "ui-btn-right" } )
            </td>
         </tr>
      }
   </table>
</div>

